# Environment Variables for ZTOQ
# Copy this file to .env and customize with your API credentials

# qTest API Configuration
# Base URL for qTest API (remove https:// prefix if causing issues)
qtest_base_url=yourinstance.qtestnet.com
# Bearer token for qTest API (preferred authentication method)
qtest_bearer_token=your-bearer-token
# Optional username/password for qTest API (used when token is not provided)
qtest_username=user@example.com
qtest_password=password

# Zephyr Scale API Configuration
zephyr_access_token=your-zephyr-access-token
zephyr_base_url=https://api.zephyrscale.smartbear.com/v2
zephyr_project_key=KEY

# Logging Configuration
# Set to DEBUG, INFO, WARNING, ERROR, or CRITICAL
ZTOQ_LOG_LEVEL=INFO
