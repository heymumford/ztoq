# Environment variables for ZTOQ
# Copy this file to .env and update with your values

# API Access Tokens
# -----------------
# Zephyr Scale API token (required for Zephyr operations)
zephyr_access_token=your_zephyr_token_here

# qTest API bearer token (required for qTest operations)
qtest_bearer_token=your_qtest_token_here

# Project Configuration
# --------------------
# Zephyr project key (used in examples and tools)
ZEPHYR_PROJECT_KEY=DEMO

# qTest project ID (used in examples and tools)
QTEST_PROJECT_ID=12345

# API Base URLs
# ------------
# Zephyr Scale API base URL
ZEPHYR_BASE_URL=https://api.zephyrscale.smartbear.com/v2

# qTest API base URL
QTEST_BASE_URL=https://demo.qtestnet.com

# Logging and Debug
# ----------------
# Logging level (DEBUG, INFO, WARNING, ERROR)
ZTOQ_LOG_LEVEL=INFO

# Set to 1 to enable debug mode
ZTOQ_DEBUG=0
